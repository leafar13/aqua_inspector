{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ðŸ”§ Organizar Imports + Formatear",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "dart fix --apply ${file} && dart format ${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always"
            }
        },
        {
            "label": "ðŸ‘€ Dart Format Watcher",
            "type": "shell",
            "command": "dart",
            "args": ["format", "--watch", "lib/"],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Watching.*$",
                    "endsPattern": "^.*Formatted.*$"
                }
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "ðŸ’¾ Format Current File",
            "type": "shell",
            "command": "dart",
            "args": ["format", "${file}"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
